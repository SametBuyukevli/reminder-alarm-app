<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/reminderTime"
        android:layout_margin="10dp"
        android:textSize="24sp"
        android:paddingBottom="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Time" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:paddingLeft="90dp"
            android:textSize="24sp"
            android:layout_height="wrap_content"
            android:text="Tarih"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:paddingLeft="150dp"
            android:text="Saat" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:datePickerDialogTheme="@style/DatePickerDialogTheme"
            android:datePickerMode="spinner"
            android:spinnersShown="true" />

        <!-- time picker-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:orientation="horizontal">

            <NumberPicker
                android:id="@+id/numPickerHour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1" />

            <NumberPicker
                android:id="@+id/numPickerMinute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1" />



        </LinearLayout>


        <!---->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Select Alarm Sound"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinnerAlarmSound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/alarm_sounds" />

    </LinearLayout>

    <EditText
        android:id="@+id/Aciklama"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/tv_border"
        android:layout_margin="10dp"
        android:hint="Açıklama..."
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hatirlatici Ekle"/>

        <Spinner
            android:id="@+id/hatirlaticiSec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/hatirlatmadakika"/>

    </LinearLayout>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Get Reminder Time"
        android:textSize="20sp" />

</LinearLayout>